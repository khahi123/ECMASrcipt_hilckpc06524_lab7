{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "warn", // Warn if console.log is used
        "no-unused-vars": "error", // Error if there are unused variables
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2
            }
        ], // Allow up to 2 consecutive empty lines
        "no-trailing-spaces": "error", // Disallow trailing spaces
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ] // Enforce spacing after commas
    }
}